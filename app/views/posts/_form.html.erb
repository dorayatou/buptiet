<%= form_for(@post, :url => { :action => "create" }) do |f| %>

  <% if @post.errors.any? %>
    <div>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <span class="graytitle">标题:</span>
  <ul class="pageitem">
    <li class="bigfield">
      <%= f.text_field :title, :size => 20, "placeholder" => "Title", "type" => "text"%>
    </li>
  </ul>

  <span class="graytitle">内容:</span>
  <ul class="pageitem">
    <li class="textbox">
      <%= f.text_area :body, :size => "60x12", "placeholder" => "Content", "type" => "text"%>
    </li>
  </ul>

  <ul class="pageitem">
    <li class="button"><%= submit_tag "确定", "type" => "submit" %></li>
  </ul>

<% end %>