<div id="topbar">
  <div id="title">课程列表</div>
  <div id="leftbutton">
    <%= link_to '主页', admins_path, :method => :get %>
  </div>
  <div id="rightnav">
    <%= link_to '新添', new_course_path %>
  </div>
</div>

<div id="tributton">
  <div class="links">
    <%= link_to "课程管理", courses_path %><%= link_to "授课管理", offers_path %><%= link_to "选课管理", selects_path %>
  </div>
</div>
 
<div id="content">
  <% if notice %>
    <div>
      <ul>
        <li><%= notice %></li>
      </ul>
    </div>
  <% end %>

  <span class="graytitle">全部课程</span>
  <ul class="pageitem">
    <% @courses.each do |course| %>
      <li class="menu">
        <span class="name"><%= course.name %></span>
        <span><%= link_to "", course %></span>
        <span class="arrow"></span>
      </li>
    <% end %>
  </ul>

</div>

