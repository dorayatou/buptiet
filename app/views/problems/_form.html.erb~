<%= form_for(@problem, :url => { :action => "create" }) do |f| %>

  <% if @problem.errors.any? %>
    <div>
      <ul>
      <% @problem.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <span class="graytitle">新问题:</span>
  <ul class="pageitem">
    <li class="textbox">
      <%= f.text_area :body, :size => "30x5", "placeholder" => "Problem", "type" => "text"%>
    </li>
	</ul>

	<ul class="pageitem">
		<li class="bigfield">
    	<%= f.text_field :url, "placeholder" => "请输入您要添加的地址", "type" => "text" %>
		</li>
  </ul>

  <ul class="pageitem">
    <li class="button"><%= submit_tag "确定", "type" => "submit" %></li>
  </ul>

<% end %>
