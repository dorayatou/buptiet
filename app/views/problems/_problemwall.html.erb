<meta http-equiv="refresh" content="30" />
<div id="content">
  <span class="graytitle">问题墙</span>
  <% @problems.each do |problem| %>
    <ul class="pageitem">
      <li class="store" style="height:80px">
        <span class="comment"><%= problem.student.student_info.name %> : </span>   
				<p style="margin:5px 0% 10px 25%;"><%= problem.body %> </p>  
				<span class="image">提问人数：<%= problem.number %></span>
			</li>
		</ul>
		<div>
			<%= button_to "移除", delete_problem_problems_path(problem.id), method: :get %>
		</div>
	<% end %>
</div>
