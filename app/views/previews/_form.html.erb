<%= form_for(@preview, :url => { :action => "create" }) do |f| %>
 
 <span class="graytitle">预习内容:</span>
  <ul class="pageitem">
    <li class="textbox">
      <%= f.text_area :body, :size => "60x12", "placeholder" => "Content", "type" => "text"%>
    </li>
	</ul>
	<span class="graytitle">如果您需要提供材料链接，请输入链接的地址：</span>
	<ul class="pageitem">
		<li class="bigfield">
    	<%= f.text_field :url, "placeholder" => "请输入您要添加的地址", "type" => "text" %>
		</li>
  </ul>

  <ul class="pageitem">
      <li class="button"><%= submit_tag "确认", "type" => "submit" %></li>
  </ul>
  
<% end %>

