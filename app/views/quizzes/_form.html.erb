<%= form_for(@quiz, :url => { :action => "create" }) do |f| %>

  <% if @quiz.errors.any? %>
    <div>
      <ul>
      <% @quiz.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <span class="graytitle">题目类型：</span>
  <ul class="pageitem">
    <li class="bigfield">
      <%= f.select :quiz_type, options_for_select([["单选", '单选'], ['多选', '多选'], ['问答', '问答']]), :type => "select" %>
    </li>
  </ul>

  <span class="graytitle">练习名称:</span>
  <ul class="pageitem">
    <li class="bigfield">
      <%= f.text_field :name, "placeholder" => "Name", "type" => "text" %>
    </li>
  </ul>

  <span class="graytitle">练习时间(分):</span>
  <ul class="pageitem">
    <li class="bigfield">
      <%= f.text_field :quiz_time, :size => "20", "placeholder" => "Time", "type" => "text" %>
    </li>
  </ul>

  <span class="graytitle">练习时间(周):</span>
  <ul class="pageitem">
    <li class="bigfield">
      <%= f.text_field :week_total, "placeholder" => "Week_total", "type" => "text" %>
    </li>
  </ul>

  <ul class="pageitem">
    <li class="bigfield">
      <%= f.select :seq, options_for_select([["第一套题目", '1'], ['第二套题目', '2'], ['第三套题目', '3']]), :type => "select" %>
    </li>
  </ul>

  <ul class="pageitem">
    <li class="button"><%= submit_tag "确定", "type" => "submit" %></li>
  </ul>

<% end %>