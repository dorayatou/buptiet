<div id="topbar">
  <div id="title">群组讨论</div>
  <div id="leftnav">
    <%= link_to '返回', students_path, :method => :get %>
  </div>
</div>
 
<div id="content">

  <% if notice %>
    <div>
      <ul>
        <li><%= notice %></li>
      </ul>
    </div>
  <% end %>

  	<% if @current_group %>
	  <span class="graytitle">当前课程群组</span>
	  <ul class="pageitem">
	  	<li class="menu">
	  		<span class="name"><%= @current_group.name %></span>
	  		<span><%= link_to "", student_posts_path(@current_group) %></span>
	  		<span class="arrow"></span>
	  	</li>
	  </ul>
	<% else %>
		<span class="graytitle">我的课程群组</span>
	  	<ul class="pageitem">
	  		<% @course_groups.each do |group| %>
	  			<li class="menu">
	  				<span class="name"><%= group.name %></span>
	  				<span><%= link_to "", student_posts_path(group) %></span>
	  				<span class="arrow"></span>
	  			</li>
	  		<% end %>
	  	</ul>
	<% end %>

	<span class="graytitle">我的班级群组</span>
	<% if @class_groups %>
	  	<ul class="pageitem">
	  		<% @class_groups.each do |group| %>
	  			<li class="menu">
	  				<span class="name"><%= group.name %></span>
	  				<span><%= link_to "", student_posts_path(group) %></span>
	  				<span class="arrow"></span>
	  			</li>
	  		<% end %>
	  	</ul>
	<% else %>
		<ul class="pageitem">
      		<li class="textbox">
        		<ul>
          			<span class="graytitle">尚无加入任何班级群组</span>
        		</ul>
      		</li>
    	</ul>
	<% end %>
</div>


