<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div>
      <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <span class="graytitle">ID:</span>
  <ul class="pageitem">
    <li class="bigfield">
      <%= f.text_field :identifier, :size => 20, "placeholder" => "Course ID", "type" => "text" %>
    </li>
  </ul>

  <span class="graytitle">课程名称:</span>
  <ul class="pageitem">
    <li class="bigfield">
      <%= f.text_field :name, :size => 20, "placeholder" => "Course name", "type" => "text"%>
    </li>
  </ul>

  <span class="graytitle">学院:</span>
  <ul class="pageitem">
    <li class="select">
      <%= select_tag(:academy_id, options_from_collection_for_select(Academy.all, :id, :name)) %>
      <span class="arrow"></span>
    </li>
  </ul>

  <span class="graytitle">课程信息：</span>
  <ul class="pageitem">
    <li class="bigfield">
      <%= f.text_field :info, "placeholder" => "Course info", "type" => "text" %>
    </li>
  </ul>

  <span class="graytitle">课程标签：</span>
  <ul class="pageitem">
    <li class="bigfield">
      <%= f.text_field :tag, "placeholder" => "Course Tag", "type" => "text" %>
    </li>
  </ul>

  <span class="graytitle">课程图片：</span>
  <ul class="pageitem">
    <li class="bigfield">
      <%= f.text_field :image, "placeholder" => "Course Image", "type" => "text" %>
    </li>
  </ul>

  <span class="graytitle">课程类型：</span>
  <ul class="pageitem">
    <li class="bigfield">
      <%= f.text_field :kind, "placeholder" => "Course Kind", "type" => "text" %>
    </li>
  </ul>

  <ul class="pageitem">
      <li class="button"><%= submit_tag "确认", "type" => "submit" %></li>
  </ul>
  
<% end %>
