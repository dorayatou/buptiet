<div id="topbar">
	<div id="title">课程管理</div>
	<div id="leftbutton">
		<%= link_to '返回', show_all_courses_admins_path %>
	</div>
</div>

<div id="tributton">
  <div class="links">
    <%= link_to "课程管理", courses_path, :id => "pressed" %><%= link_to "授课管理", offers_path %><%= link_to "选课管理", selects_path %>
  </div>
</div>

<div id="content" >
	<span class="graytitle">课程列表</span>
	<table>
		<% @courses.each do |course| %>
		<tr>
			<td>
				<%= course.identifier %>
			</td>
			<td>
				<%= course.name %>
			</td>
			<td>
				<%= course.academy.name %>
			</td>
			<td>
				<%= link_to '详情', course_path(course) %> | <%= link_to '编辑', edit_course_path(course) %> | <%= link_to '删除', course_path(course), :method => :delete, :confirm => 'Are you sure?' %>
			</td>
		</tr>
		<% end %>
	</table>
	<br />
	<h1 style="float:right;position:relative;right:20px;text-decoration: underline;"><%= link_to '新添', new_course_path %></h1>
</div>

	